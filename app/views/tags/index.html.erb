<h1>All existing Tags</h1>

<ul>
  <% @tags.each do |tag| %>
    <li>
      <%= link_to tag.name, tag_path(tag) %>
      <% if logged_in? %>
        <%= link_to "Delete tag", tag_path(tag), method: :delete, data: {confirm: "Sure about deleting this tag?"} %>
      <% end %>
    </li>
  <% end %>
</ul>